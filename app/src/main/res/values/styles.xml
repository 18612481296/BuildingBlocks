<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FitSystemWindows">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="baseLayoutParam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="commonListViewStyle" parent="baseLayoutParam">
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="cardStyle" parent="baseLayoutParam">

    </style>

    <style name="cardRelativeLayoutStyle" parent="baseLayoutParam">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="cardImageViewStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">95dp</item>
    </style>

    <style name="cardOverflowIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@mipmap/ic_card_overflow</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
